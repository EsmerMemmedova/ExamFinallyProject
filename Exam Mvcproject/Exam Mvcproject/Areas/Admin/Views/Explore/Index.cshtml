@using Core.Models;
@model List<Explore>
@{
    int count = 0;
}
<h1>
    Explores
    <a class="btn btn-primary" asp-action="Create">Create</a>
</h1>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">FullName</th>
      <th scope="col">Description</th>
      <th scope="col">ImgFile</th>
    </tr>
  </thead>
  <tbody>
        @foreach(var item in Model)
        {
                count++;
                <tr>
      <td>@count</td>
      <td>@item.FullName</td>
      <td>@item.Description</td>
      <td>
          <div style="width:100px">
              <img width="100%" src="~/Uploads/Explores/@item.ImgUrl">

          </div>
      </td>
      <td>
          <a class=" btn btn-warning" asp-action="Update" asp-controller="Explore" asp-route-id="@item.Id">Update </a>
         <a class=" btn btn-danger" asp-action="Delete" asp-controller="Explore" asp-route-id="@item.Id">Delete </a>
      </td>
    </tr>
        }

    
  </tbody>
</table>
</div>